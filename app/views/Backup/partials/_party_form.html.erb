<%= form_for(@party) do |f| %>
        <%= f.label :name %>
	<%= f.text_field :name  %>
	 
<div class="field">
	<%= f.label :date %>
	<%= f.date_select :date, :order => [:month, :day, :year],:start_year => Time.now.year%>
	<%= f.label :start_time %><br />
	<%= f.text_field :start_time, :class =>"input" %>
	<%= f.label :end_time %><br />
	<%= f.text_field :end_time, :class =>"input" %>
	<%= f.label :location %><br />
	<%= f.text_field :location, placeholder: "Write the location of your party..." %></br>

	<%= f.label :Description %><br />
	<%= f.text_area :desc %><br />
	<%= f.label :rsvp_date %><br />
	<%= f.date_select :rsvp_date, :include_blank => true %>
</div>

  <%= f.submit "Create ", class: "btn btn-large btn-primary" %>
<% end %>

